---
- name: Configure Monitoring Backend for Rackmonkey
  hosts: monitoring.rackmonkey.de
  gather_facts: true
  become: true
  tasks:
    - name: Backend
      tags: server
      block:
        - name: Include role
          ansible.builtin.include_role:
            name: roles/monitoring_server
- name: Configure Monitoring Base for Clients for Rackmonkey
  hosts: all
  gather_facts: true
  tasks:
    - name: Clients
      tags: clients
      block:
        - name: Include role
          ansible.builtin.include_role:
            name: roles/monitoring_client
